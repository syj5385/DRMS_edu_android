<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="#EFEFEF"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:gravity="center"
        android:text="☆ DRMS(edu) 1.3.0 업데이트 ☆"
        android:textColor="@color/roundtopic"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="1. 2단계 1차 출시"
                android:textColor="#4374D9"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="조종기 사용방법 등 12단계 출시"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="스마트폰을 이용한 제어 가능"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="모형은 교재를 참고하여 만들어 주세요."
                android:textColor="#000000"
                android:textSize="13dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="2. 블루투스 통신"
                android:textColor="#4374D9"
                android:textSize="17dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="3. 업로드 수정"
                android:textColor="#4374D9"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="업로드 화면에서 나오는 설명을 잘 참고하여 해주세요."
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="업로드 화면 내 '?' 클릭 시 업로드 하는 방법에 대한 설명이 있습니다."
                android:textColor="#000000"
                android:textSize="13dp" />




        </LinearLayout>

    </ScrollView>



</LinearLayout>
