<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13dp"
        android:src="@drawable/cont3_8_image0"
        android:id="@+id/drone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/baseball"
        android:src="@drawable/cont3_8_image5"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/baseball"
        app:layout_constraintTop_toBottomOf="@id/drone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/cont3_8_image3"
        android:id="@+id/soccer"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drone"
        app:layout_constraintLeft_toRightOf="@id/baseball"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/basketball"
        android:src="@drawable/cont3_8_image7"
        />




</android.support.constraint.ConstraintLayout>