<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/cont3_5_image1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/human"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/human"
        app:layout_constraintRight_toRightOf="@id/human"
        app:layout_constraintBottom_toTopOf="@id/human"
        android:layout_marginBottom="10dp"
        android:src="@drawable/cont3_5_image3"
        android:id="@+id/equip"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/cont3_5_image4"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:id="@+id/sun"/>

</android.support.constraint.ConstraintLayout>